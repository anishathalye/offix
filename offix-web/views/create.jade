extends layout

block content
  div.center
    h1.offix Offi<span>X</span>
    h1.title Create Account
    h4.error #{errMes}
    form(name='register', action='/register', method='post')

      div.form-group.input-group
        span.input-group-addon
          i.glyphicon.glyphicon-user
        input.form-control(type='text', name='username', placeholder='Username')

      div.form-group.input-group
        span.input-group-addon
          i.glyphicon.glyphicon-user
        input.form-control(type='text', name='realName', placeholder='Real Name')

      div.form-group.input-group
        span.input-group-addon
          i.glyphicon.glyphicon-lock
        input.form-control(type='password', name='password', placeholder='Password')

      div.form-group.input-group
        span.input-group-addon
          i.glyphicon.glyphicon-lock
        input.form-control(type='text', name='key', placeholder='Signup Key')

      div.form-group
        input.btn.btn-def.btn-block.login(type='submit', value='Register')

      a.back(href="/") &lt; Back
